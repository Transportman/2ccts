/*
* PURCHASE
*/

spriteset(spriteset_rbd_Germany_Saxon_DET_1_2_purchase, "gfx/Railbus-diesel/Germany_Saxon_DET_1_2.png") {
	template_purchase(1, 32)
}

/*
* VEHICLE
*/

//Engine
spriteset(spriteset_rbd_Germany_Saxon_DET_1_2_engine1, "gfx/Railbus-steam/South_Africa_CSAR_Railmotor.png") {
	template_2cc_L10(1, 1)
}

spriteset(spriteset_rbd_Germany_Saxon_DET_1_2_engine2, "gfx/Railbus-steam/South_Africa_CSAR_Railmotor.png") {
	template_2cc_L10(1, 32)
}

//Animation states
switch(FEAT_TRAINS, SELF, switch_rbd_Germany_Saxon_DET_1_2_animation, motion_counter % 2){
	0: spriteset_rbd_Germany_Saxon_DET_1_2_engine1;
	spriteset_rbd_Germany_Saxon_DET_1_2_engine2;
}

/*
* Visual effect
*/

switch(FEAT_TRAINS, SELF, switch_rbd_Germany_Saxon_DET_1_2_visual_effect, position_in_vehid_chain % 2) {
	0: return visual_effect_and_powered(VISUAL_EFFECT_STEAM, -3, DISABLE_WAGON_POWER);
	return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_rbd_Germany_Saxon_DET_1_2_length, position_in_vehid_chain % 2) {
	0: 8;
	2;
}

/*
* Cargo capacity
*/

switch(FEAT_TRAINS, SELF, switch_rbd_Germany_Saxon_DET_1_2_capacity, cargo_classes) {
	bitmask(CC_MAIL): 35;
	bitmask(CC_ARMOURED): 17;
	69;
}