	}	
	livery_override (item_mu_wagon_unpowered){
		loading_speed: 20;
		running_cost_factor: 17;
		power: 0;
		weight: 35;
		cargo_capacity: switch_emu_Italy_FS_ALe_801_capacity;
		length: 7;
		default: switch_emu_Italy_FS_ALe_801_cargo_selection;
	}
	livery_override (item_mu_wagon_powered){
		loading_speed: 20;
		running_cost_factor: 25;
		power: 351;
		weight: 53;
		cargo_capacity: switch_emu_Italy_FS_ALe_801_capacity;
		length: 7;
		default: switch_emu_Italy_FS_ALe_801_cargo_selection;
	}
}
