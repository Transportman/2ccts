item(FEAT_TRAINS, item_emu_Italy_FS_ALe_801) {
    property {
        name: string(str_emu_Italy_FS_ALe_801);
        REGION(SOUTHERNEUROPE,NOREGION,NOCONCEPT)
        
        introduction_date: date(1975,1,1);
        model_life: 25;
        vehicle_life: 25;
        loading_speed: 20;
        cost_factor: 39;
        running_cost_factor: 33;
        speed: 150 km/h;
        power: 702 hp;
        cargo_capacity: 108;
        weight: 70 ton;
        tractive_effort_coefficient: 0.15;
        air_drag_coefficient: 0;
        
        reliability_decay: 20;
        CARGODEF_PASSENGERS
        cargo_age_period: 185;
        misc_flags: bitmask(TRAIN_FLAG_MU,TRAIN_FLAG_2CC);
        refit_cost: 0;
        track_type: RAIL;
		ai_special_flag: AI_FLAG_PASSENGER;
        running_cost_base: RUNNING_COST_STEAM;
        engine_class: ENGINE_CLASS_ELECTRIC;
        visual_effect_and_powered: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);

        sprite_id: SPRITE_ID_NEW_TRAIN;
        dual_headed: 1;
        length: 7;
        extra_power_per_wagon: 0;
        bitmask_vehicle_info: 0;
	}
	graphics {
		purchase: spriteset_emu_Italy_FS_ALe_801_purchase;
		can_attach_wagon: switch_can_attach_vehicle;
		cargo_capacity: switch_emu_Italy_FS_ALe_801_capacity;
		visual_effect_and_powered: switch_emu_Italy_FS_ALe_801_visual_effect_and_powered;
