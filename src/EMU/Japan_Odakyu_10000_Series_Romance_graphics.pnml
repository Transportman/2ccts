/*
* PURCHASE
*/

spriteset(spriteset_emu_Japan_Odakyu_10000_Series_Romance_purchase, "gfx/EMU/Japan_Odakyu_10000_Series_Romance.png") {
	template_purchase_dualheaded(1, 128)
}

/*
* VEHICLE
*/

//Front
spriteset(spriteset_emu_Japan_Odakyu_10000_Series_Romance_front, "gfx/EMU/Japan_Odakyu_10000_Series_Romance.png") {
	template_2cc_engines_general(1, 1)
}

//Back
spriteset(spriteset_emu_Japan_Odakyu_10000_Series_Romance_back, "gfx/EMU/Japan_Odakyu_10000_Series_Romance.png") {
	template_2cc_engines_general(1, 32)
}

//Middle - PAX-L1
spriteset(spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlepass_L1, "gfx/EMU/Japan_Odakyu_10000_Series_Romance.png") {
	template_2cc_engines_general(1, 64)
}

//Middle - PAX-L2
spriteset(spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlepass_L2, "gfx/EMU/Japan_Odakyu_10000_Series_Romance.png") {
	template_2cc_engines_general(178, 64)
}

//Middle - MAIL-L1
spriteset(spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlemail_L1, "gfx/EMU/Japan_Odakyu_10000_Series_Romance.png") {
	template_2cc_engines_general(1, 96)
}

//Middle - MAIL-L2
spriteset(spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlemail_L2, "gfx/EMU/Japan_Odakyu_10000_Series_Romance.png") {
	template_2cc_engines_general(178, 96)
}

//Dualheaded engines
switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_reversed, var[0xC8]) {
	0xFE: spriteset_emu_Japan_Odakyu_10000_Series_Romance_back;
    0xFF: spriteset_emu_Japan_Odakyu_10000_Series_Romance_back; 
    spriteset_emu_Japan_Odakyu_10000_Series_Romance_front;
}

//Visual effect, for EMU this is done on the part with the pantograph
random_switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_visual_effect_and_powered) {
	9: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
	1: visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_visual_effect_and_powered_position, position_in_vehid_chain) {
	0: visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
	switch_emu_Japan_Odakyu_10000_Series_Romance_visual_effect_and_powered;
}

//Livery selection depends on visual effect switch
random_switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_middlepass_livery) {
	dependent: switch_emu_Japan_Odakyu_10000_Series_Romance_visual_effect_and_powered;
	9: spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlepass_L1;
	1: spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlepass_L2;
}

random_switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_middlemail_livery) {
	dependent: switch_emu_Japan_Odakyu_10000_Series_Romance_visual_effect_and_powered;
	9: spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlemail_L1;
	1: spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlemail_L2;
}

//First unit wagon always has a pantograph
switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_middlepass_position, position_in_vehid_chain) {
	0: spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlepass_L2;
	switch_emu_Japan_Odakyu_10000_Series_Romance_middlepass_livery;
}

switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_middlemail_position, position_in_vehid_chain) {
	0: spriteset_emu_Japan_Odakyu_10000_Series_Romance_middlemail_L2;
	switch_emu_Japan_Odakyu_10000_Series_Romance_middlemail_livery;
}

/*
* Cargo capacity
*/

switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_capacity, cargo_classes) {
	bitmask(CC_MAIL): 30;
	bitmask(CC_ARMOURED): 20;
	40;
}

//Graphics for the unit wagon based on cargo class
switch(FEAT_TRAINS, SELF, switch_emu_Japan_Odakyu_10000_Series_Romance_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): switch_emu_Japan_Odakyu_10000_Series_Romance_middlepass_position;
	switch_emu_Japan_Odakyu_10000_Series_Romance_middlemail_position;
}