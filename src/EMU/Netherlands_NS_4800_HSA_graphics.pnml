	template_2cc_engines_general(1, 160)
}

switch(FEAT_TRAINS, SELF, switch_emu_Netherlands_NS_4800_HSA_middlepass_position_back, [STORE_TEMP(1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: spriteset_emu_Netherlands_NS_4800_HSA_middlepass_regular;
	spriteset_emu_Netherlands_NS_4800_HSA_middlepass_part2_back;
}

switch(FEAT_TRAINS, SELF, switch_emu_Netherlands_NS_4800_HSA_middlepass_position_front, [STORE_TEMP(1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: spriteset_emu_Netherlands_NS_4800_HSA_middlepass_part2_front;
	spriteset_emu_Netherlands_NS_4800_HSA_middlepass_double;
}

switch(FEAT_TRAINS, SELF, switch_emu_Netherlands_NS_4800_HSA_middlepass_length, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Netherlands_NS_4800_HSA_middlepass_position_back;
	switch_emu_Netherlands_NS_4800_HSA_middlepass_position_front;
}

