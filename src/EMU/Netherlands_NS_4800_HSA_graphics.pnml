//Dualheaded engines
switch(FEAT_TRAINS, SELF, switch_emu_Netherlands_NS_4800_HSA_reversed, var[0xC8]) {
	0xFE: spriteset_emu_Netherlands_NS_4800_HSA_back;
    0xFF: spriteset_emu_Netherlands_NS_4800_HSA_back; 
    spriteset_emu_Netherlands_NS_4800_HSA_front;
}

//Visual effect, for EMU this is done on the part with the pantograph
switch(FEAT_TRAINS, SELF, switch_emu_Netherlands_NS_4800_HSA_visual_effect_and_powered, [STORE_TEMP(1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, 0, DISABLE_WAGON_POWER);
}
	
