switch(FEAT_TRAINS, SELF, switch_emu_Netherlands_NS_4800_HSA_middlemail_length, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Netherlands_NS_4800_HSA_middlemail_position_back;
	switch_emu_Netherlands_NS_4800_HSA_middlemail_position_front;
