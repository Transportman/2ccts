/*
* PURCHASE
*/

spriteset(spriteset_emu_Russia_RZD_ER200_purchase, "gfx/EMU/Russia_RZD_ER200.png") {
	template_purchase_dualheaded(1, 128)
}

/*
* VEHICLE
*/

//Front
spriteset(spriteset_emu_Russia_RZD_ER200_front, "gfx/EMU/Russia_RZD_ER200.png") {
	template_2cc_engines_general(1, 1)
}

//Back
spriteset(spriteset_emu_Russia_RZD_ER200_back, "gfx/EMU/Russia_RZD_ER200.png") {
	template_2cc_engines_general(1, 32)
}

//Middle - PAX-L1
spriteset(spriteset_emu_Russia_RZD_ER200_middlepass_L1, "gfx/EMU/Russia_RZD_ER200.png") {
	template_2cc_engines_general(1, 64)
}

//Middle - PAX-L2
spriteset(spriteset_emu_Russia_RZD_ER200_middlepass_L2, "gfx/EMU/Russia_RZD_ER200.png") {
	template_2cc_engines_general(179, 64)
}

//Middle - MAIL-L1
spriteset(spriteset_emu_Russia_RZD_ER200_middlemail_L1, "gfx/EMU/Russia_RZD_ER200.png") {
	template_2cc_engines_general(1, 96)
}

//Middle - MAIL-L2
spriteset(spriteset_emu_Russia_RZD_ER200_middlemail_L2, "gfx/EMU/Russia_RZD_ER200.png") {
	template_2cc_engines_general(179, 96)
}

//Dualheaded engines
switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_reversed, var[0xC8]) {
	0xFE: spriteset_emu_Russia_RZD_ER200_back;
    0xFF: spriteset_emu_Russia_RZD_ER200_back; 
    spriteset_emu_Russia_RZD_ER200_front;
}

//Visual effect, for EMU this is done on the part with the pantograph
random_switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_visual_effect_and_powered) {
	9: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
	1: visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_visual_effect_and_powered_position, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Russia_RZD_ER200_visual_effect_and_powered;
	visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
}

random_switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_middlepass_livery) {
	dependent: switch_emu_Russia_RZD_ER200_visual_effect_and_powered;
	9: spriteset_emu_Russia_RZD_ER200_middlepass_L1;
	1: spriteset_emu_Russia_RZD_ER200_middlepass_L2;
}

random_switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_middlemail_livery) {
	dependent: switch_emu_Russia_RZD_ER200_visual_effect_and_powered;
	9: spriteset_emu_Russia_RZD_ER200_middlemail_L1;
	1: spriteset_emu_Russia_RZD_ER200_middlemail_L2;
}

//First unit wagon always has a pantograph
switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_middlepass_position, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Russia_RZD_ER200_middlepass_livery;
	spriteset_emu_Russia_RZD_ER200_middlepass_L2;
}

switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_middlemail_position, [STORE_TEMP(-1, 0x10F), var[0x61, 0, 0x0000FFFF, 0xC6]]) {
	ID_RANGE_UNIT_WAGONS: switch_emu_Russia_RZD_ER200_middlemail_livery;
	spriteset_emu_Russia_RZD_ER200_middlemail_L2;
}
	
/*
* Cargo capacity
*/

ENGINECAPACITYSWITCH(VEHIDCODE)

WAGONCAPACITYSWITCH(VEHIDCODE)

//Graphics for the unit wagon based on cargo class
switch(FEAT_TRAINS, SELF, switch_emu_Russia_RZD_ER200_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): switch_emu_Russia_RZD_ER200_middlepass_position;
	switch_emu_Russia_RZD_ER200_middlemail_position;
}

//Add defined switches

RUNNINGCOSTENGINESWITCH

RUNNINGCOSTMUWAGONSWITCH

PURCHASETEXTSWITCH