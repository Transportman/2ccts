/*
* PURCHASE
*/

spriteset(spriteset_mglv_China_Transrapid_purchase, "gfx/Maglev/China_Transrapid.png") {
	template_purchase(1, 128)
}

/*
* VEHICLE
*/

//Front
spriteset(spriteset_mglv_China_Transrapid_front, "gfx/Maglev/China_Transrapid.png") {
	template_2cc_engines_general(1, 1)
}

//Back
spriteset(spriteset_mglv_China_Transrapid_back, "gfx/Maglev/China_Transrapid.png") {
	template_2cc_engines_back(1, 32)
}

//Middle - PAX
spriteset(spriteset_mglv_China_Transrapid_middlepass, "gfx/Maglev/China_Transrapid.png") {
	template_2cc_engines_general(1, 64)
}
//Middle - MAIL
spriteset(spriteset_mglv_China_Transrapid_middlemail, "gfx/Maglev/China_Transrapid.png") {
	template_2cc_engines_general(1, 96)
}

//PAX Switch
switch(FEAT_TRAINS, SELF, switch_mglv_China_Transrapid_PASS_position, position_in_vehid_chain) {
	0: spriteset_mglv_China_Transrapid_front;
    2 : spriteset_mglv_China_Transrapid_back; 
    spriteset_mglv_China_Transrapid_middlepass;
}

//MAIL Switch
switch(FEAT_TRAINS, SELF, switch_mglv_China_Transrapid_MAIL_position, position_in_vehid_chain) {
	0: spriteset_mglv_China_Transrapid_front;
    2: spriteset_mglv_China_Transrapid_back; 
    spriteset_mglv_China_Transrapid_middlemail;
}

//Graphics selection based on cargo class
switch(FEAT_TRAINS, SELF, switch_mglv_China_Transrapid_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): switch_mglv_China_Transrapid_PASS_position;
	switch_mglv_China_Transrapid_MAIL_position;
}

/*
* Cargo capacity
*/

switch(FEAT_TRAINS, SELF, switch_mglv_China_Transrapid_capacity, cargo_classes) {
	bitmask(CC_MAIL): 41;
	bitmask(CC_ARMOURED): 28;
	55;
}
	