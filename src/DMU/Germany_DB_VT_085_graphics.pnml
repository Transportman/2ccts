/*
* PURCHASE
*/

spriteset(spriteset_dmu_Germany_DB_VT_085_purchase, "gfx/DMU/Germany_DB_VT_085.png") {
	template_purchase_dualheaded(1, 128)
}

/*
* VEHICLE
*/

//Front
spriteset(spriteset_dmu_Germany_DB_VT_085_front, "gfx/DMU/Germany_DB_VT_085.png") {
	template_2cc_engines_general(1, 1)
}

//Back
spriteset(spriteset_dmu_Germany_DB_VT_085_back, "gfx/DMU/Germany_DB_VT_085.png") {
	template_2cc_engines_general(1, 32)
}

//Middle - PAX
spriteset(spriteset_dmu_Germany_DB_VT_085_middlepass, "gfx/DMU/Germany_DB_VT_085.png") {
	template_2cc_engines_general(1, 64)
}
//Middle - MAIL
spriteset(spriteset_dmu_Germany_DB_VT_085_middlemail, "gfx/DMU/Germany_DB_VT_085.png") {
	template_2cc_engines_general(1, 96)
}

//Dualheaded engines
switch(FEAT_TRAINS, SELF, switch_dmu_Germany_DB_VT_085_reversed, var[0xC8]) {
	0xFE: spriteset_dmu_Germany_DB_VT_085_back;
    0xFF: spriteset_dmu_Germany_DB_VT_085_back; 
    spriteset_dmu_Germany_DB_VT_085_front;
}

//Visual effect, for DMU this is done on the front engine
switch(FEAT_TRAINS, SELF, switch_dmu_Germany_DB_VT_085_visual_effect_and_powered, var[0xC8]) {
	0xFE: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
	0xFF: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
	visual_effect_and_powered(VISUAL_EFFECT_DIESEL, -3, DISABLE_WAGON_POWER);
}
	
/*
* Cargo capacity
*/

ENGINECAPACITYSWITCH(VEHIDCODE)

WAGONCAPACITYSWITCH(VEHIDCODE)

//Graphics for the unit wagon based on cargo class
switch(FEAT_TRAINS, SELF, switch_dmu_Germany_DB_VT_085_cargo_selection, cargo_classes){
	bitmask(CC_PASSENGERS): spriteset_dmu_Germany_DB_VT_085_middlepass;
	spriteset_dmu_Germany_DB_VT_085_middlemail;
}

//Add defined switches

RUNNINGCOSTENGINESWITCH

RUNNINGCOSTMUWAGONSWITCH

PURCHASETEXTSWITCH