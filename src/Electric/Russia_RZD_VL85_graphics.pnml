/*
* PURCHASE
*/

spriteset(spriteset_electric_Russia_RZD_VL85_purchase, "gfx/Electric/Russia_RZD_VL85.png") {
	template_purchase(1, 64)
}

/*
* VEHICLE
*/

//Engine
spriteset(spriteset_electric_Russia_RZD_VL85_engine, "gfx/Electric/Russia_RZD_VL85.png") {
	template_2cc_engines_general(1, 1)
}
//Tender
spriteset(spriteset_electric_Russia_RZD_VL85_tender, "gfx/Electric/Russia_RZD_VL85.png") {
	template_2cc_engines_general(1, 32)
}

switch(FEAT_TRAINS, SELF, switch_electric_Russia_RZD_VL85_position, position_in_vehid_chain % 2) {
	0: spriteset_electric_Russia_RZD_VL85_engine;
	spriteset_electric_Russia_RZD_VL85_tender;
}

/*
* Visual effect
*/

switch(FEAT_TRAINS, SELF, switch_electric_Russia_RZD_VL85_visual_effect, position_in_vehid_chain % 2) {
	0: return visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
	return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_electric_Russia_RZD_VL85_length, position_in_vehid_chain % 2) {
	0: 8;
	8;
}

switch(FEAT_TRAINS, SELF, switch_electric_Russia_RZD_VL85_articulated, extra_callback_info1) {
	1: return item_electric_Russia_RZD_VL85;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

