/*
* PURCHASE
*/

spriteset(spriteset_electric_USA_GN_W_1_purchase, "gfx/Electric/USA_GN_W_1.png") {
	template_purchase(1, 128)
}

/*
* VEHICLE
* This vehicle uses the template for length 12.
* The vehicle is built with 3 pieces of length 8+4
* The middle part gets the graphics, the other parts are left blank
*/

//Engine
spriteset(spriteset_electric_USA_GN_W_1_engine, "gfx/Electric/USA_GN_W_1.png") {
	template_2cc_L12(1, 1)
}

switch(FEAT_TRAINS, SELF, switch_electric_USA_GN_W_1_position, position_in_vehid_chain % 2) {
	0: spriteset_electric_USA_GN_W_1_engine;
	EMPTY_SPRITESET
}

/*
* Visual effect
*/

switch(FEAT_TRAINS, SELF, switch_electric_USA_GN_W_1_visual_effect, position_in_vehid_chain % 2) {
	0: return visual_effect_and_powered(VISUAL_EFFECT_ELECTRIC, -3, DISABLE_WAGON_POWER);
	return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_electric_USA_GN_W_1_length, position_in_vehid_chain % 2) {
	0: 8;
	4;
}

switch(FEAT_TRAINS, SELF, switch_electric_USA_GN_W_1_articulated, extra_callback_info1) {
	1: return item_electric_USA_GN_W_1;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

