/*
* PURCHASE
*/

spriteset(spriteset_diesel_Russia_RZD_GT1_purchase, "gfx/Diesel/Russia_RZD_GT1.png") {
	template_purchase(1, 64)
}

/*
* VEHICLE
*/

//Engine
spriteset(spriteset_diesel_Russia_RZD_GT1_engine, "gfx/Diesel/Russia_RZD_GT1.png") {
	template_2cc_engines_general(1, 1)
}
//Tender
spriteset(spriteset_diesel_Russia_RZD_GT1_tender, "gfx/Diesel/Russia_RZD_GT1.png") {
	template_2cc_engines_general(1, 32)
}

switch(FEAT_TRAINS, SELF, switch_diesel_Russia_RZD_GT1_position, position_in_vehid_chain % 2) {
	0: spriteset_diesel_Russia_RZD_GT1_engine;
	spriteset_diesel_Russia_RZD_GT1_tender;
}

/*
* Visual effect
*/

switch(FEAT_TRAINS, SELF, switch_diesel_Russia_RZD_GT1_visual_effect, position_in_vehid_chain % 2) {
	0: return visual_effect_and_powered(VISUAL_EFFECT_DIESEL, -3, DISABLE_WAGON_POWER);
	return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_diesel_Russia_RZD_GT1_length, position_in_vehid_chain % 2) {
	0: 8;
	8;
}

switch(FEAT_TRAINS, SELF, switch_diesel_Russia_RZD_GT1_articulated, extra_callback_info1) {
	1: return item_diesel_Russia_RZD_GT1;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

